<UserControl x:Class="NetClientWpf.MessageElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetClientWpf"
             mc:Ignorable="d"
             Background="#FFCCCCCC">
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TextBlock_MessageSender" Grid.Row="0" Text="Sender Name" Padding="4,2" Margin="0,0,0,2" FontWeight="Bold" Foreground="#FF4A4A4A"/>
        <TextBlock x:Name="TextBlock_MessageContent" Grid.Row="1" TextWrapping="Wrap" Text="Conent" Padding="4,2" Background="White" Foreground="#FF424242"/>
    </Grid>
</UserControl>
